{
    "napcat_host": {
        "type": "string",
        "description": "Napcat连接地址",
        "hint": "格式：IP:端口，例如 127.0.0.1:3000",
        "default": "127.0.0.1:3000",
        "obvious_hint": true
    },
    "request_timeout": {
        "type": "int",
        "description": "请求超时时间（秒）",
        "hint": "推荐值10-30秒",
        "default": 10
    },
    "max_daily_breakups": {
        "type": "int",
        "description": "每日最大分手次数",
        "hint": "超过此次数将自动屏蔽用户",
        "default": 3
    },
    "breakup_block_hours": {
        "type": "int",
        "description": "超限屏蔽时长（小时）",
        "hint": "触发次数限制后的屏蔽时长",
        "default": 48
    },
    "default_cooling_hours": {
        "type": "int",
        "description": "默认冷静期时长（小时）",
        "hint": "建议48-168小时",
        "default": 48
    }
}